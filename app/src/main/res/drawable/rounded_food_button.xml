<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa inferior: degradado a transparente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A0C4F1"/>
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Capa superior: degradado a transparente rotado -->
    <item
        android:top="-30dp"
        android:bottom="-30dp"
        android:left="-100dp"
        android:right="100dp">
        <rotate
            android:fromDegrees="135"
            android:pivotX="55%"
            android:pivotY="70%">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#29020202" />
                <corners android:radius="15dp" />
            </shape>
        </rotate>
    </item>

</layer-list>
