<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_search_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="@color/light_grey" />

    <!-- Borde redondeado -->
    <corners android:radius="10dp" />

    <!-- Borde con color y ancho -->
    <stroke
        android:width="2dp"
        android:color="#947C7C7C" />

    <!-- Margen interno (opcional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
